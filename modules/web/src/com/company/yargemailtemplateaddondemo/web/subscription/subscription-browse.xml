<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="com.company.yargemailtemplateaddondemo.web.subscription.SubscriptionBrowse"
        focusComponent="subscriptionsTable"
        lookupComponent="subscriptionsTable"
        messagesPack="com.company.yargemailtemplateaddondemo.web.subscription">
    <dsContext>
        <groupDatasource id="subscriptionsDs"
                         class="com.company.yargemailtemplateaddondemo.entity.Subscription"
                         view="subscription-view">
            <query>
                <![CDATA[select e from demo$Subscription e]]>
            </query>
        </groupDatasource>
        <collectionDatasource id="emailTemplatesDs"
                              class="com.haulmont.addon.emailtemplates.entity.EmailTemplate"
                              view="emailTemplate-view">
            <query>
                <![CDATA[select e from emailtemplates$EmailTemplate e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="subscriptionsTable"
            spacing="true">
        <filter id="filter"
                applyTo="subscriptionsTable"
                datasource="subscriptionsDs">
            <properties include=".*"/>
        </filter>
        <hbox spacing="true">
            <lookupField id="templatesField"
                         optionsDatasource="emailTemplatesDs"
                         width="250px"/>
            <button id="sendButton"
                    caption="msg://send"
                    invoke="onSendButtonClick"/>
        </hbox>
        <groupTable id="subscriptionsTable"
                    width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="name"/>
                <column id="active"/>
                <column id="expiryDate"/>
                <column id="customer"/>
            </columns>
            <rows datasource="subscriptionsDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="editBtn"
                        action="subscriptionsTable.edit"/>
                <button id="removeBtn"
                        action="subscriptionsTable.remove"/>
            </buttonsPanel>
        </groupTable>
    </layout>
</window>
