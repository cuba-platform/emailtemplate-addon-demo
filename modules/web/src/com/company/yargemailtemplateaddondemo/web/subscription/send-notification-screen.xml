<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://sendScreen"
        class="com.company.yargemailtemplateaddondemo.web.subscription.TemplateSendingScreen"
        messagesPack="com.company.yargemailtemplateaddondemo.web.subscription">
    <dsContext>
        <collectionDatasource id="emailTemplatesDs"
                              class="com.haulmont.addon.emailtemplates.entity.EmailTemplate">
            <query>
                <![CDATA[select e from emailtemplates$EmailTemplate e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <actions>
        <action id="sendAction"
                invoke="onSendAction"/>
    </actions>
    <dialogMode height="AUTO"
                width="AUTO"/>
    <layout>
        <hbox spacing="true">
            <lookupField id="templatesField"
                         optionsDatasource="emailTemplatesDs"
                         width="250px"/>
            <button id="sendButton"
                    action="sendAction"
                    caption="msg://send"/>
            <button id="cancel"
                    caption="Cancel"
                    invoke="onCancelClick"/>
        </hbox>
    </layout>
</window>
