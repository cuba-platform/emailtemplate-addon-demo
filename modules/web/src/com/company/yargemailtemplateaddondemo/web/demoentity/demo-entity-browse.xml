<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="com.company.yargemailtemplateaddondemo.web.demoentity.DemoEntityBrowse"
        focusComponent="demoEntitiesTable"
        lookupComponent="demoEntitiesTable"
        messagesPack="com.company.yargemailtemplateaddondemo.web.demoentity">
    <dsContext>
        <groupDatasource id="demoEntitiesDs"
                         class="com.company.yargemailtemplateaddondemo.entity.DemoEntity"
                         view="_local">
            <query>
                <![CDATA[select e from demo$DemoEntity e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="demoEntitiesTable"
            spacing="true">
        <filter id="filter"
                applyTo="demoEntitiesTable"
                datasource="demoEntitiesDs">
            <properties include=".*"/>
        </filter>
        <groupTable id="demoEntitiesTable"
                    width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="name"/>
                <column id="description"/>
            </columns>
            <rows datasource="demoEntitiesDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="demoEntitiesTable.create"/>
                <button id="editBtn"
                        action="demoEntitiesTable.edit"/>
                <button id="removeBtn"
                        action="demoEntitiesTable.remove"/>
            </buttonsPanel>
        </groupTable>
    </layout>
</window>
