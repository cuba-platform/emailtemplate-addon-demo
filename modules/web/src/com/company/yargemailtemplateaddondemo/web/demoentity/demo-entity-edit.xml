<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.company.yargemailtemplateaddondemo.web.demoentity.DemoEntityEdit"
        datasource="demoEntityDs"
        focusComponent="fieldGroup"
        messagesPack="com.company.yargemailtemplateaddondemo.web.demoentity">
    <dsContext>
        <datasource id="demoEntityDs"
                    class="com.company.yargemailtemplateaddondemo.entity.DemoEntity"
                    view="_local"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="demoEntityDs">
            <column width="250px">
                <field property="name"/>
                <field property="description"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
